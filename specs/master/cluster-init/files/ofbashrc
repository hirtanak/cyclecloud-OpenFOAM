#!/bin/bash

# set up parameters
CUSER=$(cat /mnt/exports/shared/CUSER)
HOMEDIR=/shared/home/${CUSER}

# OpenFOAM install directory
FOAM_INSTALL_DIRECTORY=${HOMEDIR}/apps/OpenFOAM

# Download Only
unset DOWNLOAD_ONLY
#DOWNLOAD_ONLY=yes

# Number of processors
export WM_NCOMPPROCS=44

# OpenFOAM version list to install
OpenFOAM_BUILD_OPTION_LIST=(
#### v1706
    OpenFOAM_VERSION=OpenFOAM-v1706,BUILD_PARAVIEW=0\
,COMPILER_TYPE=ThirdParty,COMPILER=Gcc4_8_5,MPLIB=OPENMPI\
,COMPILE_OPTION=Opt,ARCH_OPTION=64,PRECISION_OPTION=DP,LABEL_SIZE=32
#### v1712
    OpenFOAM_VERSION=OpenFOAM-v1712,BUILD_PARAVIEW=0\
,COMPILER_TYPE=ThirdParty,COMPILER=Gcc4_8_5,MPLIB=OPENMPI\
,COMPILE_OPTION=Opt,ARCH_OPTION=64,PRECISION_OPTION=DP,LABEL_SIZE=32
#### v1806
    OpenFOAM_VERSION=OpenFOAM-v1806,BUILD_PARAVIEW=0\
,COMPILER_TYPE=ThirdParty,COMPILER=Gcc4_8_5,MPLIB=OPENMPI\
,COMPILE_OPTION=Opt,ARCH_OPTION=64,PRECISION_OPTION=DP,LABEL_SIZE=32
#### v1812
    OpenFOAM_VERSION=OpenFOAM-v1812,BUILD_PARAVIEW=0\
,COMPILER_TYPE=ThirdParty,COMPILER=Gcc4_8_5,MPLIB=OPENMPI\
,COMPILE_OPTION=Opt,ARCH_OPTION=64,PRECISION_OPTION=DP,LABEL_SIZE=32
#### v1906
    OpenFOAM_VERSION=OpenFOAM-v1906,BUILD_PARAVIEW=0\
,COMPILER_TYPE=ThirdParty,COMPILER=Gcc4_8_5,MPLIB=OPENMPI\
,COMPILE_OPTION=Opt,ARCH_OPTION=64,PRECISION_OPTION=DP,LABEL_SIZE=32
)
